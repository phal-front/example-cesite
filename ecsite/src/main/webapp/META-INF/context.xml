<?xml version="1.0" encoding="UTF-8"?>
<Context path="example_ecsite">
	<WatchedResource>WEB-INF/web.xml</WatchedResource>

	<!-- PostgreSQL -->
	<Resource name="jdbc/PostgreSQL"
		auth="Container"
		type="javax.sql.DataSource"
		factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
		maxTotal="100"
		maxIdle="20"
		maxWaitMillis="-1"
		username="example_ecsite_user"
		password="example_ecsite_user"
		driverClassName="org.postgresql.Driver"
		url="jdbc:postgresql://localhost:5432/example_ecsite"
		validationQuery="SELECT 0" />

</Context>
